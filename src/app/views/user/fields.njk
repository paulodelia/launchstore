<div class="item">
    <div>Nome completo</div>
    <div class="input">
        <input 
            type="text"
            name="name"
            placeholder="Digite seu nome completo"
            value="{{user.name}}"
            required
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
            required
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Escolha uma senha segura"
            value="{{user.password}}"
            required
        >
    </div>
</div>

{% if not user.id %}
    <div class="item">
        <div>Repetir senha</div>
        <div class="input">
            <input 
                type="password"
                name="passwordRepeat"
                placeholder="Repita a senha"
                required
            >
        </div>
    </div>
{% endif %}

<div class="item">
    <div>CPF ou CNPJ</div>
    <div class="input">
        <input 
            type="text"
            name="cpf_cnpj"
            placeholder="Digite seu documento"
            placeholder="{{user.cpf_cnpj}}"
            onkeydown="Mask.apply(this, 'cpfCnpj')"
            onblur="Validate.apply(this, 'isCpfCnpj')"
            required
        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input 
            type="text"
            name="cep"
            placeholder="01234-567"
            placeholder="{{user.cep}}"
            onkeydown="Mask.apply(this, 'cep')"
            onblur="Validate.apply(this, 'isCep')"
            required
        >
    </div>
</div>

<div class="item">
    <div>Endereço completo</div>
    <div class="input">
        <input 
            type="text"
            name="address"
            placeholder="Digite seu endereço completo"
            placeholder="{{user.address}}"
            required
        >
    </div>
</div>